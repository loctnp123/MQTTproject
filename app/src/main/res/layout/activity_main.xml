<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSubStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscribing Status"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edtPub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What you want to publish?..."
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Newest Message:"
        android:layout_margin="10dp"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffaf00"
        android:text="Waiting for messages..."
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200sp"
        android:text="Publish"
        android:onClick="publish"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Subscribe"
        android:onClick="subscribe"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Unsubscribe"
        android:onClick="unsubscribe"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Disconnect"
        android:onClick="disconnect"/>


</LinearLayout>